= render "shared/backgroundAnimation"

.jumbotron.text-center
  %h2 Forgot your password?

= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, :html => { :id => "forgot_password_form", :class => 'forgot_password_form'}) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email
    = f.email_field :email, autofocus: true, autocomplete: "email", class: 'name formEntry'
  .actions
    = f.submit "Send me reset password instructions", class: 'btn'

    = render "devise/shared/links"